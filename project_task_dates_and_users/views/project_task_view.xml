<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_task_search_form" model="ir.ui.view">
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form" />
        <field name="arch" type="xml">
            <field name="stage_id" position="after">
                <field name="date_done" />
                <field name="revised_date" />
                <field name="user_date_done_id" />
                <field name="user_revised_date_id" />
            </field>
            <filter name="kanban_state" position="after">
                <filter
          string="Date done"
          name="group-date-done"
          context="{'group_by':'date_done'}"
        />
                <filter
          string="Revised date"
          name="group-revised-date"
          context="{'group_by':'revised_date'}"
        />
                <filter
          string="User date done"
          name="group-user-date-done"
          context="{'group_by':'user_date_done_id'}"
        />
                <filter
          string="User revised date"
          name="group-user-revised-date"
          context="{'group_by':'user_revised_date_id'}"
        />
            </filter>
        </field>
    </record>

    <record id="view_task_form2" model="ir.ui.view">
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <field name="date_deadline" position="after">
                <field name="date_done" />
                <field name="user_date_done_id" />
                <field name="revised_date" />
                <field name="user_revised_date_id" />
            </field>
        </field>
    </record>

    <record id="view_task_tree2" model="ir.ui.view">
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2" />
        <field name="arch" type="xml">
            <field name="stage_id" position="before">
                <field name="date_done" optional="show" />
                <field name="user_date_done_id" readonly="1" optional="show" />
                <field name="revised_date" optional="show" />
                <field name="user_revised_date_id" readonly="1" optional="show" />
            </field>
        </field>
    </record>
</odoo>
